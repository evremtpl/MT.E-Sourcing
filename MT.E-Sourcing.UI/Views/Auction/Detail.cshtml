
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                <div class="card-title"> Quick Action</div>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputPrice">Price</label>
                        <input type="number" min="0" class="form-control" id="exampleInputPrice" placeholder="Enter Price" />
                    </div>

                </div>
                <div class="card-footer">

                    <button type="submit" class="btn btn-primary"> Submit</button>
                </div>
            </form>
        </div>

    </div>
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header" style="background-color:darkgray">
                <h3 class="card-title"> Active Auction Detail</h3>
            </div>
            <div class="card-body">
                <table id="exampleAuction" class="table table-bordered table-hover">
                    <thead>

                        <tr style="background-color:darkgrey">
                            <th>Auction User Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td> Merve TOPAL</td>
                            <td> 17$</td>
                            <td> 7</td>
                        </tr>
                    </tbody>

                </table>
            </div>
        </div>

    </div>
</div>

